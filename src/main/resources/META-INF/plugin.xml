<idea-plugin>
    <id>net.allape.XFTP</id>
    <name>XFTP</name>
    <vendor email="allensnape@qq.com" url="http://www.allensnape.com">ALLAPE</vendor>

    <description><![CDATA[
        FYI, not test on Windows yet ðŸ˜Š.<br/>
        File manage with SFTP using <a href="jetbrains://idea/settings?name=Tools--SSH+Configurations">SSH Configurations of IDE Settings</a>.<br>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.ultimate</depends>
    <depends>org.jetbrains.plugins.remote-run</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="XFTP"
                    secondary="true"
                    anchor="bottom"
                    canCloseContents="true"
                    factoryClass="net.allape.windows.XFTPExplorerWindowFactory">
        </toolWindow>
    </extensions>

    <actions>
        <action id="ShowXftpToolWindow" class="net.allape.actions.MenuOpenAction" text="New XFTP Explorer"
                description="Goal ! ! ! ! ! ! !">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl meta X"/>
        </action>
    </actions>
</idea-plugin>